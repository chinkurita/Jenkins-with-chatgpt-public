pipeline {
    agent any

    stages {
        stage('Checkout Code') {
            steps {
                git 'https://github.com/<your-username>/sample-pipeline.git'
            }
        }

        stage('Run Script') {
            steps {
                sh 'chmod +x app.sh'
                sh './app.sh'
            }
        }

        stage('Archive Artifact') {
            steps {
                sh 'echo "Build completed at $(date)" > build-info.txt'
                archiveArtifacts artifacts: 'build-info.txt', fingerprint: true
            }
        }
    }
}
